<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <script src="js/main.ts" type="module"></script>
    <script src="https://kit.fontawesome.com/0517951e44.js" crossorigin="anonymous" defer></script>
    <title>Isa Westling | Kurser</title>
</head>

<body>
    <header>
        <h1>Isa Westling</h1>
        <nav>
            <ul>
                <li><a href="/">Kurser</a></li>
                <li><a href="/addcourse">Lägg till kurser</a></li>
                <li><a href="/about">Om sidan</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>Kurser</h2>
        <!-- Tabell för att visa tillagda kurser -->
        <section id="course-section">
            <h2>Mina kurser</h2>
            <div id="responsive-table">
                <table id="table-container">
                    <thead>
                        <tr>
                            <th>Kurskod</th>
                            <th>Kursnamn</th>
                            <th>Kursplan</th>
                            <th>Progression</th>
                        </tr>
                    </thead>
                    <!-- Loopar genom alla kurser från resultatet, skriver ut en ny ras i tabellen för varje kurs med tabellceller för datan -->
                    <tbody id="courses">
                        <% courses.forEach((course)=> { %>
                            <tr>
                                <td>
                                    <%= course.CourseCode %>
                                </td>
                                <td>
                                    <%= course.CourseName %>
                                </td>
                                <td><a href="<%= course.Syllabus %>" target="_blank">Kursplan</a></td>
                                <td>
                                    <%= course.Progression %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</body>

</html>